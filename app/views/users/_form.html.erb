<%= form_for @user do |f|%>

<% if @user.errors.any? %>
<ul>
  <% @user.errors.full_messages.each do |msg|%>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= f.label (:username) %>
<%= f.text_field (:username) %>

<%= f.label (:email) %>
<%= f.email_field (:email) %>

<%= f.label (:password) %>
<%= f.password_field(:password) %>

<%= f.submit %>

<% end %>
